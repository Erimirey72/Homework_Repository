@{
    ViewData["Staff"] = "Delete staff";
}
@using (Html.BeginForm("Delete", "Staff", new { id = Model.Id }, FormMethod.Post))
{
<h1>Delete Staff</h1>

<div class="myform">
    <h1 class="display-4">Delete staff</h1>
    <form asp-action="delete" method="post">
        <input type="hidden" />
        <div>
            <p></p>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("StaffPage", "Home")" class="btn btn-primary">Cancel</a>
            <p></p>
        </div>
    </form>
</div>
}