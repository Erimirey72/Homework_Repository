@model EditTitleModel
@{
    ViewData["Title"] = "Edit title";
}
@using (Html.BeginForm("Edit", "Title", new { id = Model.Id }, FormMethod.Post))
{
<h1>Edit Title</h1>

<div class="myform">
    <h1 class="display-4">Edit title</h1>
    <form method="post" action="/Title/edittitle/@Model.Id">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group" method="post">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Characters"></label>
            <input asp-for="Characters" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Staffs"></label>
            <input asp-for="Staffs" class="form-control" />
        </div>
        <div>
            <p></p>
            <button type="submit" class="btn btn-primary">Edit</button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Cancel</a>
            <p></p>
        </div>
    </form>
</div>
}