@model EditTitleModel
@{
    ViewData["Title"] = "Edit title";
}

<h1>Edit Product</h1>

<div class="myform">
    <h1 class="display-4">Edit title</h1>
    <form asp-action="edit" method="post">
        <input asp-for="Id" type="hidden" />
        <div class="form-group" method="post">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Characters"></label>
            <input asp-for="Characters" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Staffs"></label>
            <input asp-for="Staffs" class="form-control" />
        </div>
        <div>
            <p></p>
            <button type="submit" class="btn btn-primary">Edit</button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Cancel</a>
            <p></p>
        </div>
    </form>
</div>