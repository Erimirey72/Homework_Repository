@model CharacterViewModel
@{
    ViewData["Character"] = "Character details";
}

<h1>Character details</h1>

<div class="">
    <p>Name: @Model.Name</p>
    <p>Description: @Model.Description</p>
    <p>Titles: @Model.Titles</p>
    <p>VoiceActor: @Model.VoiceActor</p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td> <a asp-action="Edit" asp-controller="Character" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a></td>
            <td> <a asp-action="Delete" asp-controller="Character" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    </tbody>
</table>
<a href="@Url.Action("CharacterPage", "Home")" class="btn btn-primary">Back to list</a> 