@model CreateCharacterModel

<h2>Add New Character</h2>

@Html.ValidationSummary()

<form asp-action="Create" method="post">
    <div class="form-group" method="post">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    <div class="form-group">
        <label asp-for="Titles"></label>
            <input asp-for="Titles" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="VoiceActor"></label>
        <input asp-for="VoiceActor" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

<a href="@Url.Action("CharacterPage", "Home")">Back to list</a> 